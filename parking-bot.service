[Unit]
Description=Parking CDS Telegram Bot
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/parking-cds-bot
EnvironmentFile=/home/pi/parking-cds-bot/.env
ExecStart=/home/pi/parking-cds-bot/venv/bin/python bot.py
Restart=on-failure
RestartSec=10

[Install]
WantedBy=multi-user.target
